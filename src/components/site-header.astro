---
import { SITE_TITLE } from "../config";
---

<header>
	<h2>
		<a href="/">{SITE_TITLE}</a>
	</h2>
</header>

<style>
	header {
		display: grid;
		text-align: center;

		@media (--mq-medium) {
			display: flex;
			justify-content: space-between;
			align-items: center;
			gap: var(--step--1);

			text-align: left;
		}
	}

	h2 {
		margin: 0;
		padding: var(--step--2) var(--step--1);
		border-bottom-right-radius: 0.25rem;

		line-height: 1;
		font-weight: 200;
		letter-spacing: 2px;
		background: var(--site-header-bg);
		color: var(--site-header-text);

		& a {
			color: inherit;
			text-decoration: none;
		}
	}

	nav {
		display: flex;
		gap: var(--step-0);
		justify-content: center;

		padding: var(--step--2) var(--step--1);
		color: var(--text-link);
	}
</style>
